- title "Challenge friends..."

= render :partial => 'shared/what_is_this'

%p
  == Don't have an account? #{link_to "Request an invitation!", :controller => 'invitations', :action => 'i_wanna_play'}

- form_tag sessions_path, :id => 'login_form' do
  %p
    = label_tag :login, "Username or Email Address"
    %br
    = text_field_tag :login, params[:login]
  %p
    = label_tag :password
    == (#{link_to 'forgot?', new_forgot_password_path, :tabindex => 999, :style => "text-decoration:none"})
    %br
    = password_field_tag :password
  %p
    = submit_tag "Log in"
    
= javascript_tag "$('login').activate()"

